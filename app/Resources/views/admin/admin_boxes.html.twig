{% trans_default_domain 'messages' %}

<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-xs-6">

            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>{{ pr }}</h3>

                    <p>{{ 'BOXES.PROGRAM' |trans }}</p>
                </div>
                <div class="icon">
                    <i class="ion ion-ios-list"></i>
                </div>
                <a href="{{ path('programa_index') }}" class="small-box-footer">
                    {{ 'BOXES.MOREINFO'|trans }} <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        <!-- ./col -->

            <!-- small box -->
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>{{ us }}</h3>

                    <p>{{ 'BOXES.USER'|trans }}</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person"></i>
                </div>
                <a href="{{ path('user_index') }}" class="small-box-footer">
                    {{ 'BOXES.MOREINFO'|trans }} <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>

    </div>
    <!-- ./col -->

    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h3>{{ st }}</h3>

                <p>{{ 'BOXES.STUDENT'|trans }}</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-stalker"></i>
            </div>
            <a href="{{ path('student_index') }}" class="small-box-footer">
                {{ 'BOXES.MOREINFO'|trans }} <i class="fa fa-arrow-circle-right"></i>
            </a>
        </div>

        <!-- small box -->
        <div class="small-box bg-red">
            <div class="inner">
                <h3>{{ tch }}</h3>

                <p>{{ 'BOXES.TEACHER'|trans }}</p>
            </div>
            <div class="icon">
                <i class="ion ion-person"></i>
            </div>
            <a href="{{ path('teacher_index') }}" class="small-box-footer">
                {{ 'BOXES.MOREINFO'|trans }} <i class="fa fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- ./col -->


    <!-- ./col -->
    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="info-box bg-yellow">
            <span class="info-box-icon"><i class="fa fa-calendar"></i></span>

            <div class="info-box-content">
                <span class="info-box-text">{{ 'BOXES.CALENDAR'|trans }}</span>
                <span class="info-box-number">{{ cal }}</span>

                <a href="{{ path('calendar_add') }}" style="color: whitesmoke;" class="progress-description">
                    {{ 'BUTTON.ADD.EVENT'|trans }}
                </a>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->



        <div class="box box-warning collapsed-box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">{{ 'BOXES.FASTNAV'|trans }}</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                    </button>
                </div>
                <!-- /.box-tools -->
            </div>
            <!-- /.box-header -->
            <div class="box-body">

                <div class="text-center">

                    <div class="btn-group-vertical" style="width: 100%" role="group">

                        <a href="{{ path('teacher_add') }}" type="button" class="btn btn-warning">{{ 'BUTTON.ADD.TEACHER'|trans }}</a>
                        <a href="{{ path('student_add') }}" type="button" class="btn btn-warning">{{ 'BUTTON.ADD.STUDENT'|trans }}</a>
                        <a href="{{ path('calendar_add') }}" type="button" class="btn btn-warning">{{ 'BUTTON.ADD.EVENT'|trans }}</a>
                        <a href="{{ path('programa_add') }}" type="button" class="btn btn-warning">{{ 'BUTTON.ADD.PROGRAMA'|trans }}</a>

                    </div>

                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->












</div>
<!-- /.row -->
