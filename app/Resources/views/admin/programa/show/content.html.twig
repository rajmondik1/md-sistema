<!-- Main row -->
<div class="row">
    <section class="col-lg-12">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ programa.pavadinimas }}</h3>
                <p>{{ programa.aprasymas }}</p>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="table" class="table table-striped table-hover">
                    <thead>
                    <th>{{ 'profile.show.name'|trans }}</th>
                    <th>{{ 'profile.show.surname'|trans }}</th>
                    <th>{{ 'profile.show.email'|trans }}</th>
                    </thead>
                    <tbody>
                    {% for user in programa.users %}
                        <tr>
                            <td>{{ user.name|e }}</td>
                            <td>{{ user.surname|e }}</td>
                            <td>{{ user.email|e }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <th>{{ 'profile.show.name'|trans }}</th>
                    <th>{{ 'profile.show.surname'|trans }}</th>
                    <th>{{ 'profile.show.email'|trans }}</th>
                    </tfoot>
                </table>


                {% for calendar in programa.events %}
                    <p>{{ calendar.start | date('Y:m:d') }}
                    {{ calendar.end | date('Y:m:d') }}
                    {{ calendar.events }}</p>
                {% endfor %}

                <td class="button-cell">
                    <a class="delBtn btn btn-warning">
                        <span>Istrinti</span>
                    </a>
                    <a class="yesBtn btn btn-success"
                       href="{{ path("programa_delete", {programa : programa.id}) }}">
                        Taip
                    </a>
                    <a class="noBtn btn btn-danger">Ne</a>
                </td>
                <td>
                    <a class="btn btn-warning"
                       href="{{ path("programa_edit", {programa: programa.id}) }}">
                        Redaguoti
                    </a>
                </td>
            </div>
    </section>
</div>
<!-- /.row (main row) -->
