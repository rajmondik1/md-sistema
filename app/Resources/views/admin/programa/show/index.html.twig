<script>
    $('.yesBtn, .noBtn').hide();


    $('.delBtn').on('click' ,function () {

        var parent = $(this).parent();

        $(this).fadeOut( function () {
            parent.find('.yesBtn').fadeIn();
            parent.find('.noBtn').fadeIn();
        });

    });
    $('.noBtn').on('click', function () {
        var parent = $(this).parent();

        parent.find('.yesBtn').fadeOut();
        $(this).fadeOut(function () {
            parent.find('.delBtn').fadeIn();
        });
    });

