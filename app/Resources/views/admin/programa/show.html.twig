{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block body %}

    <h1>{{ programa.pavadinimas }}</h1>
    <h3>{{ programa.aprasymas }}</h3>

<table class="table table-striped table-hover">
<thead>
    <th>{{ 'profile.show.name'|trans }}</th>
    <th>{{ 'profile.show.surname'|trans }}</th>
    <th>{{ 'profile.show.username'|trans }}</th>
    <th>{{ 'profile.show.email'|trans }}</th>
</thead>
<tbody>

    {% for user in programa.users %}
        <tr>
            <td>{{ user.name|e }}</td>
            <td>{{ user.surname|e }}</td>
            <td>{{ user.username|e }}</td>
            <td>{{ user.email|e }}</td>
        </tr>
    {% endfor %}
</tbody>
        </table>


    {% for calendar in programa.events %}
    <p>{{ calendar.title }}</p>
    {% endfor %}


{% endblock %}