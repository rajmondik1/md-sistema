{% trans_default_domain "messages" %}

<!-- Main row -->
<div class="row">
    <section class="col-lg-12">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ 'PROGRAMA.TITLE'|trans }}
                <a class="fa fa-plus" href="{{ path('programa_add') }}"></a></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="table" class="table table-bordered table-hover table-responsive">
                    <thead>
                    <tr>
                        <th>
                            {{ 'PROGRAMA.NAME'|trans }}
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for programa in programa %}
                        <tr data-href="{{ path("programa_show", {programa: programa.id}) }}">
                            <td>{{ programa.pavadinimas }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>
                            {{ 'PROGRAMA.NAME'|trans }}
                        </th>
                    </tr>
                    </tfoot>
                </table>

        </div>
    </section>
</div>
<!-- /.row (main row) -->
