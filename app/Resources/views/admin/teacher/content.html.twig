

<!-- Main row -->
<div class="row">
    <section class="col-lg-12">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ 'NAVI.TEACHER'|trans }}
                <a class="fa fa-plus" href="{{ path('teacher_add') }}"></a></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="table" class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>
                            {{ 'FORM.NAME'|trans }}
                            {{ 'FORM.SURNAME'|trans }}
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for teacher in teacher %}
                        <tr data-href="{{ path('teacher_show', {teacher: teacher.id}) }}">
                            <td >{{ teacher.name }}
                            {{ teacher.surname }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>
                            {{ 'FORM.NAME'|trans }}
                            {{ 'FORM.SURNAME'|trans }}
                        </th>
                    </tr>
                    </tfoot>
                </table>

                <div class="alert alert-warning" role="alert">{{ 'TEACHER.ALERT'|trans }}</div>
        </div>
    </section>
</div>
<!-- /.row (main row) -->
