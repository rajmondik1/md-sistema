{% trans_default_domain "messages" %}

<!-- Main row -->
<div class="row">
    <section class="col-lg-12">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ 'NAVI.STUDENT'|trans }}
                <a class="fa fa-plus" href="{{ path('student_add') }}"></a></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="table" class="table table-bordered table-hover table-responsive">
                    <thead>
                    <tr>
                        <th>
                            {{ 'FORM.NAME'|trans }}
                            {{ 'FORM.SURNAME'|trans }}
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for student in student %}
                        <tr data-href="{{ path('student_info', {student: student.id}) }}">
                            <td>{{ student.name }} {{ student.surname }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>
                        {{ 'FORM.NAME'|trans }}
                        {{ 'FORM.SURNAME'|trans }}
                        </th>
                    </tr>
                    </tfoot>
                </table>

        </div>
    </section>
</div>
<!-- /.row (main row) -->
