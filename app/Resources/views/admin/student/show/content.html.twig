{% trans_default_domain "messages" %}
<!-- Main row -->
<div class="row">
    <section class="col-lg-12">

        <div class="box">
            <div class="box-header">
                <h3 class="box-title">

                </h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table table-user-information">
            <tbody>
            <tr>
                <td>{{ 'FORM.NAME'|trans }}  {{ 'FORM.SURNAME'|trans }}</td>
                <td>{{ student.name }}
                {{ student.surname }}</td>
            </tr>
            <tr>
                <td>{{ 'FORM.EMAIL'|trans }}</td>
            </tr>
            <tr>
                <td>{{ 'FORM.PHONE'|trans }}</td>
            </tr>
            <tr>
                <td>{{ 'FORM.ADDITIONAL'|trans }}</td>
            </tr>
            </tbody>
                </table>

            </div>
            <div class="box-footer">
                <a class="delBtn btn btn-warning">
                    <span>{{ 'BUTTON.DELETE'|trans }}</span>
                </a>
                <a class="yesBtn btn btn-success"
                   href="">
                    {{ 'BUTTON.YES'|trans }}
                </a>
                <a class="noBtn btn btn-danger">
                    {{ 'BUTTON.NO'|trans }}
                </a>
                <a class="btn btn-warning"
                   href="{{ path('student_edit', {student: student.id}) }}">
                    {{ 'BUTTON.EDIT'|trans }}
                </a>
            </div>
        </div>
    </section>
</div>
<!-- /.row (main row) -->
