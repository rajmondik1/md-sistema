    <script src="{{ asset('plugins/datatables/dataTables.bootstrap.min.js') }}"></script>

    <script>
        $('tr[data-href]').on("click", function() {
            document.location = $(this).data('href');
        });

        $(function () {
            $('#vartotojai').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
            });
        });
    </script>

