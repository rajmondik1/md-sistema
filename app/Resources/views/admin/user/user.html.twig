{% block body %}
<body>
<h1>Vartotojai</h1>
    <table id="table" class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>{{ 'profile.show.name'|trans({}, 'FOSUserBundle') }}</th>
            <th>{{ 'profile.show.surname'|trans({}, 'FOSUserBundle') }}</th>
            <th>{{ 'form.username'|trans({}, 'FOSUserBundle') }}</th>
            <th>{{ 'form.email'|trans({}, 'FOSUserBundle') }}</th>
            <th>{{ 'profile.show.lastlogin'|trans({}, 'FOSUserBundle') }}</th>

        </tr>
    </thead>
    <tbody>

{% for user in users %}
        <tr data-href="{{ path("user_info", {user: user.id}) }}">
            <td>{{ user.name|e }}</td>
            <td>{{ user.surname|e }}</td>
            <td>{{ user.username|e }}</td>
            <td>{{ user.email|e }}</td>
            <td>{{ user.lastLogin is empty ? "" : user.lastLogin|date("Y-m-d H:m") }}</td>
            <td> <a class="btn btn-danger" href="{{ path('admin_delete', {user: user.id}) }}">
                 <span class="glyphicon glyphicon-remove"></span>
                    Istrinti
                </a>
            </td>
        </tr>
{% endfor %}
    </tbody>
    </table>


<script>
    $('tr[data-href]').on("click", function() {
        document.location = $(this).data('href');
    });

</script>
</body>

{% endblock %}
